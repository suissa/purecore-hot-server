{
  "name": "hot-server",
  "version": "0.1.0",
  "description": "Zero dependency modern hot-reload server replacement",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "hot-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "bun run src/index.ts",
    "dev:https": "bun run src/index.ts --https=true",
    "test": "jest",
    "certs:generate": "bun run src/cert-generator.ts generate",
    "certs:clean": "bun run src/cert-generator.ts clean",
    "certs:info": "bun run src/cert-generator.ts info"
  },
  "keywords": [
    "http-server",
    "hot-reload",
    "hot-server",
    "live-server",
    "zero-dependency"
  ],
  "author": "Suissa",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {}
}